startup_message off
vbell on

# copy mode scrollback buffer
defscrollback 1000

# make Control+v the global escape combination
escape ^Vv

# scroll support
termcapinfo xterm* ti@:te@

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}[%{W}%n*%f%t%?(%u)%?%{r}]%{w}%?%+Lw%?%?%= %{g}][%{B} %m/%d %{W}%c %{g}]'

shelltitle "l00k"
