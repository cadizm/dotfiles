[user]
	name = Michael Cadiz
	email = michael.cadiz@gmail.com
[core]
	# Tell Git to convert CRLF to LF on commit but not the other way around.
	# Leave CRLF endings in Windows checkouts but LF endings on Mac and
	# Linux systems and in the repository.
	autocrlf = input
	pager = less -x1,5
	excludesfile = ~/.gitignore
[alias]
	st = status -s
	ci = commit
	br = branch
	co = checkout
    smu = submodule update
	# For systems w/o X
	df = diff --ignore-space-at-eol
	dftool = difftool --no-prompt
	dfl = diff
	wc = whatchanged
	unstage = reset HEAD
	ls-untracked = ls-files --other --exclude-standard
	gr = log --graph --decorate=short
	log-stat = log --stat
	clean = clean --force --interactive
	cl = clean --force --interactive
	rhhh = reset --hard HEAD
	short-rev = rev-parse --short
    last-touched = log -n 1 --pretty=format:'%cn %h %ar'
[color]
	ui = true
[diff]
	tool = opendiff
	submodule = log
[merge]
	tool = opendiff
	verbosity = 5
	ff = false
[mergetool "opendiff"]
	path = opendiff
	keepBackup = false
	trustExitCode = false
[commit]
	template = ~/.git-commit.tmpl
[push]
	default = upstream
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
[log]
	date = local
[grep]
	extendRegexp = true
	lineNumber = true
[pager]
	status = false
[status]
	submodulesummary = 1
